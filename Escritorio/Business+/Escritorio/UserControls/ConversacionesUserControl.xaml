<UserControl x:Class="Escritorio.UserControls.ConversacionesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Escritorio.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             MinHeight="450" MaxHeight="1080" MinWidth="800" MaxWidth="1920"
             ClipToBounds="True">
    <Grid x:Name="tablero" Background="#FFE5E5E5">
        <ItemsControl ItemsSource="{Binding Conversaciones}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:TarjetaConversacion Nombre="{}"></local:TarjetaConversacion>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>